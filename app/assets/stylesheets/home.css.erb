}

.timer-wrapper {
	height: 100%;
	width: 100%;
}

.timer-floater {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 900px;
	height: 450px;
	margin-top: -250px;
	margin-left: -450px;
	border-radius: 10px;
	background-color: rgba(0,0,0,.45);
	z-index:10;
}

@media (max-width: 1000px) {
	.timer-floater {
		left:0%;
		margin-left: 50px;
	}
}

.timer-content {
	clear: both;
	position: relative;
	margin: 0 auto;
	text-color: #ffffff;
}
